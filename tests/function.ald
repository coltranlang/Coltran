# fibonacci series
def @FibonacciSeries()
    let prompt = "Fibonacci series: "
    let nterm = inputInt("Enter a number: ")
    let count = 0
    let n1 = 0
    let n2 = 1

    if nterm == 1 :
        println(n1)
    else:
        println(n1)
        println(n2)
        while count < nterm - 2 :
            let n3 = n1 + n2
            println(n3)
            let n1 = n2
            let n2 = n3
            let count = count + 1
        end
    end
end


