def @countZeros(N)
    let n = 32
    let y = N >> 16
    if y != 0 :
       let  n = n - 16
       let N = y
    end
    let y = N >> 8
    if y != 0 :
        let n = n - 8
        let N = y
    end
    let y = N >> 4
    if y != 0 :
        let n = n - 4
        let N = y
    end
    let y = N >> 2
    if y != 0 :
        let n = n - 2
        let N = y
    end
    let y = N >> 1
    if y != 0 :
        return n - 2
    end
    return n - N
end
println(@countZeros(16))

