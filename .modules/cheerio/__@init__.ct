def curry():
    def g(*args):
        
        if len(args) == 0:
            return none
        else:
            if len(args) < len(curry.fn.__@params__):
                # if the number of arguments is less than the number of parameters of the function to be curried then return a new function with the arguments
                return curry.fn
            else:
                return curry.__@call__(*args)
